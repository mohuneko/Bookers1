<h1>Editing Book</h1>

  <div id="success_explanation">
  <p><%= flash[:message] %></p>
  </div>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<% if @book.errors.any? %>
	  <div id="error_explanation">
	  	<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
	    <ul>
	    <% @book.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>


	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %><br>
	<%= f.submit 'Update Book' %>
<% end %>
	<%= link_to "Show",book_path(@book.id) %> | <a href="/books">Back</a>
